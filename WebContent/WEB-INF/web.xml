<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>montos</display-name>
	
	 <filter>
	  <filter-name>VerificaSesionFilter</filter-name>
	  <filter-class>co.com.helm.security.SessionFilter</filter-class>
	</filter>
	<filter>
		 <filter-name>EsapiFilter</filter-name>
		 <filter-class>co.com.helm.esapi.filters.FitSecurityWrapper</filter-class>
		 <init-param>
		 	<param-name>allowableResourcesRoot</param-name>
		 	<param-value>/</param-value>
		 </init-param>
		 <init-param>
		 	<param-name>logAppName</param-name>
			<param-value>consultaproductos</param-value>  
		 </init-param>
		 <init-param>
		 	<param-name>defaultUrlToRedirectInError</param-name>
			<param-value>/jsp/errors/PaginaMensaje.jsp</param-value>
		 </init-param>
		 <init-param>
		 	<param-name>defaultErrorMessage</param-name>
			<param-value>Los datos ingresados son incorrectos</param-value>
		 </init-param>
	</filter>	
	<filter>
	  <filter-name>DoubleFactorAuthFilterMontos</filter-name>
	  <filter-class>com.fitideas.hb.security.BusinessAuthenticationFilter</filter-class>
	  <init-param>
	    <param-name>validateQueryParam</param-name>
	    <param-value>false</param-value>
	  </init-param>
	</filter>  	
	<filter-mapping>
    	<filter-name>DoubleFactorAuthFilterMontos</filter-name>
    	<url-pattern>/actualizarMontos</url-pattern>
  	</filter-mapping>	
	<filter-mapping>
		<filter-name>VerificaSesionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>EsapiFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>	
	<servlet>
		<description>
		Pagina para actualizacion de montos</description>
		<display-name>PagMontos</display-name>
		<servlet-name>PagMontos</servlet-name>
		<servlet-class>co.itau.montos.PagMontos</servlet-class>
	</servlet>
	<servlet>
		<description>
		Actualiza los montos del cliente</description>
		<display-name>ActualizarMontos</display-name>
		<servlet-name>ActualizarMontos</servlet-name>
		<servlet-class>co.itau.montos.ActualizarMontos</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PagMontos</servlet-name>
		<url-pattern>/pagMontos</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ActualizarMontos</servlet-name>
		<url-pattern>/actualizarMontos</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>
